{
	"name": "vodafone-uk-liferay",
	"version": "0.0.1",
	"license": "MIT",
	"private": true,
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"app-demo": "build/app-demo/index.html",
	"targets": {
		"app-demo": {
			"publicUrl": "/o/liferay-amd-loader/app-demo/"
		}
	},
	"main": "build/main/index.js",
	"module": "build/module/index.module.js",
	"devDependencies": {
		"@babel/core": "^7.8.3",
		"babel-eslint": "^10.0.1",
		"babel-plugin-dynamic-import-node": "^2.2.0",
		"babel-preset-react-union": "^0.15.2",
		"eslint": "^5.12.0",
		"eslint-config-react-union": "^0.15.0",
		"eslint-plugin-babel": "^5.2.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-react": "^7.12.3",
		"liferay-build-tools": "^0.0.1",
		"liferay-npm-bundler": "2.18.2",
		"parcel": "2.0.0-nightly.125"
	},
	"scripts": {
		"start": "yarn clean && yarn start:app",
		"start:app": "parcel serve packages/app-demo/src/index.html",
		"build": "yarn clean && yarn build:app && yarn bundle",
		"build:app": "parcel build --no-scope-hoist --target app-demo packages/app-demo/src/index.html",
		"build:js": "parcel build packages/app-demo",
		"bundle": "react-union-liferay-build-tools bundle && liferay-npm-bundler",
		"clean": "rimraf .parcel-cache build dist",
		"app-demo": "yarn workspace @union-liferay/app-demo"
	}
}
